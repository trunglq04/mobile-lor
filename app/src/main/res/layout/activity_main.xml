<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ỨNG DỤNG ĐẶT THỨC ĂN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:background="#E8F5E8"
        android:padding="16dp"
        android:elevation="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_choose_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn Thức Ăn"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="#4CAF50"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btn_choose_drink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn Đồ Uống"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="#2196F3"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:elevation="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐƠN HÀNG CỦA BẠN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Món ăn:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tv_selected_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chưa chọn món ăn"
                android:textSize="14sp"
                android:textColor="#333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Đồ uống:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tv_selected_drink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chưa chọn đồ uống"
                android:textSize="14sp"
                android:textColor="#333" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cart_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có món nào trong giỏ hàng"
            android:textSize="15sp"
            android:textColor="#222"
            android:layout_marginBottom="8dp"
            android:background="#FFFDE7"
            android:padding="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 0 ₫"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:gravity="end" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐẶT MÓN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#FF5722"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />

</LinearLayout>