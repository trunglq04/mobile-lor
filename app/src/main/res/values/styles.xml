<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ButtonStyle.Primary">
        <item name="android:background">#4CAF50</item>
    </style>

    <style name="ButtonStyle.Secondary">
        <item name="android:background">#2196F3</item>
    </style>

    <style name="ButtonStyle.Accent">
        <item name="android:background">#FF5722</item>
    </style>

    <!-- Text Styles -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ItemNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ItemDescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PriceStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#E91E63</item>
    </style>
</resources>